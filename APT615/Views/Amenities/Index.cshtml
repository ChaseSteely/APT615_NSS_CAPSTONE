@model IEnumerable<APT615.Models.Amenity>

@{
    ViewData["Title"] = "Index";
}
<div class="blog-post">
    <div class="wrapper">
        <div class="page-header page-header-small">
            <div class="page-header-image" data-parallax="true" style="background-image: url('../images/draft.jpg') ;">
            </div>
            <div class="content-center">
                <div class="row">
                    <div class="col-md-8 ml-auto typography-line mr-auto text-center">
                        <img id="indexLogo" src="../images/logo.png" alt="APT615 Logo" />

                    </div>
                </div>
            </div>
        </div>
        <h2>My Amenities</h2>
        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.AmenityId">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.AmenityId">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
        <a class="text-primary text-center" href="/Apartments/TrackedApartments">Back to Dashboard</a>
    </div>
</div>