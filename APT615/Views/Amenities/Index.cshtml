@model IEnumerable<APT615.Models.Amenity>

@{
    ViewData["Title"] = "Index";
}
<h2>My Amenities</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AmenityId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.AmenityId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
