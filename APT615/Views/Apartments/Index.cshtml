@model IEnumerable<APT615.Models.Apartment>

@{
    ViewData["Title"] = "Index";
}

<div class="blog-posts">
    <div class="wrapper">
        <div class="page-header page-header-small">
            <div class="page-header-image" data-parallax="true" style="background-image: url('../images/apartmentDark.jpg') ;">
            </div>
            <div class="content-center">
                <div class="row">
                    <div class="col-md-8 ml-auto typography-line mr-auto text-center">
                        <h2 class="title">Tracked Apartments</h2>
                        <h6>View, Edit, or Delete Your Tracked Apartments</h6>
                    </div>
                </div>
            </div>
        </div>

        <div id="tables">
            <div class="row">
                <div class="col-md-12 ml-auto mr-auto">
                    <div class="card card-plain">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-dark table-striped">
                                    <thead class="text-nowrap">
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Area)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Rent)
                                            </th>
                                            <th>
                                                App Fee
                                            </th>
                                            <th>
                                                Pet Fee
                                            </th>
                                            <th>
                                                Misc Fees
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.AdminFee)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.DateAdded)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Note)
                                            </th>
                                            <th>
                                                # Bedrooms
                                            </th>
                                            <th>
                                                # Bathrooms
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.SqFt)
                                            </th>
                                            <th>
                                                Street Address
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.City)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.State)
                                            </th>
                                            <th>
                                                Zip
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Website)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PhotoUrl)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Favorited)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Visited)
                                            </th>
                                            <th class="text-right">
                                                Actions
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="text-nowrap">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Area)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.Rent)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.ApplicationFee)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.PetFee)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.MiscFees)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.AdminFee)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.DateAdded)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Note)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Bedrooms)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Bathrooms)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.SqFt)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Street)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.City)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.State)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ZipCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Website)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PhotoUrl)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Favorited)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Visited)
                                                </td>
                                                <td>
                                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.ApartmentId">Edit</a> |
                                                    <a class="text-primary" asp-action="Delete" asp-route-id="@item.ApartmentId">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <p class="text-center brand text-primary">
                                <a class="text-center brand text-primary" asp-action="Track">Track An Apartment</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
