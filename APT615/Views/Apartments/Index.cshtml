@model APT615.Models.ViewModels.ApartmentIndexData

@{

}

<div class="blog-posts">
    <div class="wrapper">
        <div id="tables">
            <div class="row">
                <div class="col-md-12 ml-auto mr-auto">
                    <div class="card card-plain">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-dark table-striped">
                                    <thead class="text-nowrap">
                                        <tr>
                                            <th>
                                                Name
                                            </th>
                                            <th>
                                                Neighborhood
                                            </th>
                                            <th>
                                                $ Rent
                                            </th>
                                            <th>
                                                $ App Fee
                                            </th>
                                            <th>
                                                $ Pet Fee
                                            </th>
                                            <th>
                                                $ Misc Fees
                                            </th>
                                            <th>
                                                $ Admin Fee
                                            </th>
                                            <th>
                                                Date Added
                                            </th>
                                            <th>
                                                Note
                                            </th>
                                            <th>
                                                # Bedrooms
                                            </th>
                                            <th>
                                                # Bathrooms
                                            </th>
                                            <th>
                                                SqFt
                                            </th>
                                            <th>
                                                Street Address
                                            </th>
                                            <th>
                                                City
                                            </th>
                                            <th>
                                                State
                                            </th>
                                            <th>
                                                Zip
                                            </th>
                                            <th>
                                                Website
                                            </th>
                                            <th>
                                                PhotoUrl
                                            </th>
                                            <th>
                                                Favorited
                                            </th>
                                            <th>
                                                Visited
                                            </th>
                                            <th>
                                                Amenities
                                            </th>
                                            <th class="text-right">
                                                Actions
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Apartments)
                                        {
                                            string selectedRow = "";
                                            if (item.ApartmentId == (int?)ViewData["ApartmentId"])
                                            {
                                                selectedRow = "success";
                                            }
                                            <tr class="text-nowrap @selectedRow">
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Area)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.Rent)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.ApplicationFee)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.PetFee)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.MiscFees)
                                                </td>
                                                <td class="text-right">
                                                    @Html.DisplayFor(modelItem => item.AdminFee)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.DateAdded)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Note)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Bedrooms)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.Bathrooms)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.SqFt)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Street)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.City)
                                                </td>
                                                <td class="text-center">
                                                    @Html.DisplayFor(modelItem => item.State)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.ZipCode)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Website)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.PhotoUrl)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Favorited)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Visited)
                                                </td>
                                                <td>
                                                    @{
                                                        foreach (var amenity in item.ApartmentAmenities)
                                                        {
                                                            @amenity.Amenities.Type <br />
                                                        }
                                                    }
                                                </td>
                                                <td>
                                                    <a class="text-primary" asp-action="Edit" asp-route-id="@item.ApartmentId">Edit</a> |
                                                    <a class="text-primary" asp-action="Delete" asp-route-id="@item.ApartmentId">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <p class="text-center brand text-primary">
                                    <a class="text-center brand text-primary" asp-action="Track">Track An Apartment</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>