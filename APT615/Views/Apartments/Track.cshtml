@inject APT615.Services.IApplicationConfiguration AppSettings;
@model APT615.Models.ApartmentViewModels.Track.TrackViewModel

@{
    ViewData["Title"] = "Track";
}

<div class="landing-page">
    <div class="wrapper">
        <div class="page-header header-filter">
            <div class="page-header-image" style="background-image: url('../images/modern.jpg');"></div>
            <div class="content-center">
                <div class="col-md-12 ml-auto">
                    <div class="card card-login card-plain">
                        <div class="card-body">
                            <div class="input-group form-group-lg input-lg rellax">
                                <input id="apartmentSearch" type="text" class="form-control text-center controls" placeholder="enter an apartment to track" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="trackMap" style="width: 100%; height: 600px"></div>

        <div class="testimonials-1 section-image" style="background-image: url('../images/floorplanDark.jpg')">
            <div class="container">
                <div class="row">
                    <div class="col-md-10 ml-auto mr-auto">
                        <div class="card card-raised card-form-horizontal card-plain" data-background-color>
                            <div class="card-body">
                                <form asp-action="Create" class="form">
                                    <div class="row">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class=" col-md-6">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.Name" class="form-control" placeholder="apartment name" />
                                                <span asp-validation-for="@Model.Apartment.Name" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.Area" class="form-control" placeholder="neighborhood or area of town" />
                                                <span asp-validation-for="@Model.Apartment.Area" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.Rent" class="form-control" placeholder="$ rent" />
                                                <span asp-validation-for="@Model.Apartment.Rent" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>@*END FORM ROW*@

                                    <div class="row">
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.ApplicationFee" class="form-control" placeholder="$ application fee" />
                                                <span asp-validation-for="@Model.Apartment.ApplicationFee" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.PetFee" class="form-control" placeholder="$ pet fee" />
                                                <span asp-validation-for="@Model.Apartment.PetFee" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.MiscFees" class="form-control" placeholder="$ misc monthly fees" />
                                                <span asp-validation-for="@Model.Apartment.MiscFees" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.AdminFee" class="form-control" placeholder="$ admin fee" />
                                                <span asp-validation-for="@Model.Apartment.AdminFee" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>@*END FORM ROW*@
                                    <div class="form-group input">
                                        <input asp-for="@Model.Apartment.Note" class="form-control" placeholder="notes" />
                                        <span asp-validation-for="@Model.Apartment.Note" class="text-danger"></span>
                                    </div>
                                    <div class="row">
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <select class="form-control select" placeholder="# of bedrooms" type="number" data-val="true" data-val-required="The Bedrooms field is required." id="Bedrooms" name="Bedrooms" value="">
                                                    <option selected hidden># of bedrooms</option>
                                                    <option value="0">Studio</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                    <option value="4">4</option>
                                                </select>
                                                <span asp-validation-for="@Model.Apartment.Bedrooms" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <select class="form-control" type="number" data-val="true" data-val-required="The Bathrooms field is required." id="Bathrooms" name="Bathrooms" value="">
                                                    <option selected hidden># of bathrooms</option>
                                                    <option value="1">1</option>
                                                    <option value="2">2</option>
                                                    <option value="3">3</option>
                                                </select>
                                                <span asp-validation-for="@Model.Apartment.Bathrooms" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.SqFt" class="form-control" placeholder="sqft" />
                                                <span asp-validation-for="@Model.Apartment.SqFt" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>@*END FORM ROW*@

                                    <div class="row">
                                        <div class=" col-md-4">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.Street" class="form-control" placeholder="street address" />
                                                <span asp-validation-for="@Model.Apartment.Street" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.City" class="form-control" placeholder="city" />
                                                <span asp-validation-for="@Model.Apartment.City" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-2">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.State" class="form-control" placeholder="state" />
                                                <span asp-validation-for="@Model.Apartment.State" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-3">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.ZipCode" class="form-control" placeholder="zipcode" />
                                                <span asp-validation-for="@Model.Apartment.ZipCode" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>@*END FORM ROW*@

                                    <div class="row">
                                        <div class=" col-md-2">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.Latitude" class="form-control" placeholder="latitude" />
                                                <span asp-validation-for="@Model.Apartment.Latitude" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-2">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.Longitude" class="form-control" placeholder="longitude" />
                                                <span asp-validation-for="@Model.Apartment.Longitude" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-4">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.Website" class="form-control" placeholder="website" />
                                                <span asp-validation-for="@Model.Apartment.Website" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class=" col-md-4">
                                            <div class="form-group input">
                                                <input asp-for="@Model.Apartment.PhotoUrl" class="form-control" placeholder="photo url" />
                                                <span asp-validation-for="@Model.Apartment.PhotoUrl" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="card-footer text-center">
                                        <button type="submit" class="btn btn-primary btn-round btn-sm btn-block brand">+ Apartment</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>@*END FORM CONTAINER*@
        </div>

    </div>
</div>
<script src="https://code.jquery.com/jquery-3.3.1.js"
        integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
        crossorigin="anonymous"></script>
<script src="~/js/trackApt.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=@AppSettings.GoogleApiKey&libraries=places&callback=initAutocomplete"></script>
<script src="~/js/plugins/rellax.min.js" type="text/javascript"></script>
<script>
    // Also can pass in optional settings block
    var rellax = new Rellax('.rellax', {
        center: true,
        round: true,
        vertical: true,
        horizontal: false
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
