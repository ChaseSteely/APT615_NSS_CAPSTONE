@model APT615.Models.ViewModels.ApartmentIndexData

@{

}
<div class="landing-page">
    <div class="wrapper">
        <div class="page-header header-filter">
            <div class="page-header-image" style="background-image: url('../images/RooftopDeck.jpg');"></div>
            <div class="content-center">
                <div class="container">
                    <div class="row">
                        <div class="col-md-10 ml-auto mr-auto text-center">
                            <h2 id="homeIntroP">Enter Any Amenities You Want Your Ideal Apartment To Have</h2>
                            <h3 id="amenityError" class="text-danger">@ViewData["Message"]</h3>
                            <div class="card card-login card-plain">
                                <div class="card-body">
                                    <form asp-action="CreateAmenity" id="AmenityForm" class="form">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group input-lg">
                                            <input asp-for="Amenity.Type" class="form-control form-control-lg text-center controls" placeholder="amenity (ex: High-Speed Internet)" />
                                            <span asp-validation-for="Amenity.Type" class="text-danger"></span>
                                        </div>
                                        <div class="card-footer text-center">
                                            <input id="amenityBtn" type="submit" value="+ Amenity" class="btn btn-primary btn-round btn-lg btn-block brand" />
                                        </div>
                                    </form>
                                    <a class="text-primary text-center" asp-action="TrackedApartments">Back to List</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
